#include <stdio.h>

int main() {
    float taxpr;
    float limit;
    float highertax;

    // User input
    printf("What is your tax precentage? \n");
    scanf("%f", &taxpr);

    printf("What is your income limit? \n ");
    scanf("%f", &limit);

    printf("Enter higher tax percentage, if your income goes over the limit: \n");
    scanf("%f", &highertax);

    int months;
    printf("Number of months: \n");
    scanf("%d", &months);


    float salary[months];
    float tax[months];

    for (int i = 0; i < months; i++) {
        printf("Enter salary for month %d: \n ", i + 1);
        scanf("%f", &salary[i]);

        // Tax of each month
        float income = salary[i];
        float taxAmount;

        if (income <= income) {
            taxAmount = (income * taxpr) / 100;
        } else {
            float lowertax = (income * taxpr) / 100;
            float highincome = income - income;
            float highertax = (highincome * highertax) / 100;
            taxAmount = lowertax + highertax;
        }

        tax[i] = taxAmount;

        printf("Month %d: Salary=%.2f, Tax=%.2f\n", i + 1, salary[i], tax[i]);
    }

    return 0;
}
